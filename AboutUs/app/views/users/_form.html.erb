<div class="container">
  <div class="row">
    <div class="col"></div> <!-- to center  -->
    <div class="col-lg-6">
    <div class="form-control">
      <div id="clearance" class="sign-in">
        <h2><%="Register" %></h2>

          <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, type: 'email' %>
          </div>

          <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password %>
          </div>

          <div class="submit-field">
            <%= form.submit %>
          </div>

          <div class="other-links">
            <%= link_to "Log In", sign_in_path %>
          </div>

      </div> <!--sign in class---->
    </div> <!---form control end--->

    </div> <!---col lg 6 end---->
    <div class="col"></div>
  </div>
</div> <!---container end-->