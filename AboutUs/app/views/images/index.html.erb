<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Is approved</th>
      <th>Image title</th>
      <th>Image owner</th>
      <th>Category</th>
      <th>Licensing</th>
      <th>Date</th>
      <th>Description</th>
      <th>File type</th>
      <th>Location</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.image_id %></td>
        <td><%= image.is_approved %></td>
        <td><%= image.image_title %></td>
        <td><%= image.image_owner_id %></td>
<!--    changed to name Paul Ancajima-->
        <td><%= image.category.name %></td>
        <td><%= image.licensing %></td>
        <td><%= image.date %></td>
        <td><%= image.description %></td>
        <td><%= image.file_type %></td>
        <td><%= image.location %></td>
        <td><%  image.uploads.each do |upload| %>
            <%= link_to (image_tag upload, size: '50x50'), image %>
          <% end %>
        </td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= render 'images/search_images', image: @image %>
</p>
<br>

<%= link_to 'New Image', new_image_path %>
