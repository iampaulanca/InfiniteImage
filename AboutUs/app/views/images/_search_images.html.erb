<%= search_form_for @q do |f| %>

<!-- Changed search field. We can search through our attributes from the table "category" IE. category_id category_name etc-->




    <%= f.collection_select :category_id, Category.all, :id, :name, {:selected => @user_cat_id, :prompt => "All"},  { class: "custom-select col-2" } %>

    <%= f.search_field :image_title_cont, placeholder: 'Search for an image. (i.e. Animals, Cars, Food, Nature, People, Travel)', class: "form-control col-8" %>

    <%= f.submit 'Search', name: 'images', class: "btn btn-primary col-2" %>

<% end %>



