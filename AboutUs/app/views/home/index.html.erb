<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">

  <title>Infinite Image</title>
</head>


<!-- Page Content -->
<div class="container">
  <p>Displaying 1 - <%= @approved_images.count %> images</p>
  <!--<h1 class="my-4 text-center text-lg-left">Infinite Image</h1>-->
  <!-- Search -->
  <form>
    <div class="row">
      <div class="col"></div> <!--center search bar -->
      <div class="col-lg-6">
        <div class="input-group">

          <!-- <input type="text" class="form-control" aria-label="..."> -->
          <!-- <input type="submit" value="Search"> -->
          <!-- Using ransack gem to create search field and submission button -->
          <%= render 'images/search_images', images: @images %>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
      <div class="col"></div> <!--center search bar -->
    </div><!-- /.row -->
  </form>
  <!-- End Search -->

  <!------- if no images found during search ----------->
  <% if @home.count == 0 %>
    <p style="text-align: center">Sorry we were not able to find what you were looking for, here are some of our
      favorites!</p>
    <% @home = Image.all %>
  <% end %>
  <!------- if no images found during search ----------->
  <div class="row top-buffer">
    <div class="row text-center text-lg-left">

      <!-- Loop through each picture and assign each to bootstrap class. Will need to limit these and not show whole db -->

      <% @home.shuffle.each do |image| %>
        <% image.uploads.each do |upload| %>
          <% if image.status_id == 1 %>
            <div class="col-lg-3 col-md-4 col-xs-6">

              <%= link_to (image_tag upload, class: "img-fluid img-thumbnail"), image, class: "d-block mb-4 h-100", target: :_blank %>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <!-- for testing image layout -->
      <!--  <div class="col-lg-3 col-md-4 col-xs-6">
               <a href="#" class="d-block mb-4 h-100">
                 <img class="img-fluid img-thumbnail" src="http://placehold.it/400x300" alt="">
               </a>
            </div> -->

    </div>
  </div>
</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
  </div>
